@model PaymentViewModel
@{
    ViewBag.Title = "Confirm Payment";
    decimal totalAmount = Model.Tickets?.Sum(t => t.Price) ?? 0;
}

<h2 class="text-center">Confirm Payment</h2>
<div class="row m-1">
    <div class="col col-12 col-lg-10 offset-lg-1">
        <hr />
        <form asp-action="Payment">
            <div class="row m-1 mb-5">
                <input asp-for="FlightId" type="hidden" />
                <input asp-for="FirstName" type="hidden" />
                <input asp-for="LastName" type="hidden" />
                <input asp-for="BirthDate" type="hidden" />
                <input asp-for="Email" type="hidden" />
                <input asp-for="Address1" type="hidden" />
                <input asp-for="Address2" type="hidden" />
                <input asp-for="City" type="hidden" />
                <input asp-for="Country" type="hidden" />
                @for (int i = 0; i < Model.Tickets!.Count; i++)
                {
                    var ticket = Model.Tickets.ElementAt(i);
                    <input type="hidden" data-val="true" data-val-required="The FirstName field is required." id="Tickets[@i].FirstName" name="Tickets[@i].FirstName" value="@ticket.FirstName">
                    <input type="hidden" data-val="true" data-val-required="The LastName field is required." id="Tickets[@i].LastName" name="Tickets[@i].LastName" value="@ticket.LastName">
                    <input type="hidden" data-val="true" data-val-required="The Age field is required." id="Tickets[@i].Age" name="Tickets[@i].Age" value="@ticket.Age">
                    <input type="hidden" data-val="true" data-val-required="The Email field is required." id="Tickets[@i].Email" name="Tickets[@i].Email" value="@ticket.Email">
                    <input type="hidden" data-val="true" data-val-required="The SeatNumber field is required." id="Tickets[@i].SeatNumber" name="Tickets[@i].SeatNumber" value="@ticket.SeatNumber">
                    <input type="hidden" data-val="true" data-val-required="The Price field is required." id="Tickets[@i].Price" name="Tickets[@i].Price" value="@ticket.Price">
                }
                <div class="col col-12 col-md-6">
                    <div class="mb-3">
                        <h4>Tickets</h4>
                        <ul class="list-group">
                            @foreach (var ticket in Model.Tickets!)
                            {
                                <li class="list-group-item">
                                    @ticket.FirstName @ticket.LastName - @ticket.SeatNumber - $@ticket.Price.ToString("N2")
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col col-12 col-md-5 offset-md-1">
                    <div class="mb-3">
                        <h4>Total Amount - $@totalAmount.ToString("N2")</h4>
                    </div>
                    <div class="mb-3">
                        <h5>Choose Payment Method</h5>
                        <div class="d-flex gap-3 mt-2">
                            <label style="cursor:pointer;">
                                <input type="radio" asp-for="PaymentMethod" value="cc" class="me-2" />
                                <img src="~/images/visa.svg" alt="VISA" width="40" />
                                <img src="~/images/mastercard.svg" alt="/ Mastercard" width="40" />
                            </label>
                        </div>
                        <div class="d-flex gap-3 mt-2">
                            <label style="cursor:pointer;">
                                <input type="radio" asp-for="PaymentMethod" value="paypal" class="me-2" />
                                <img src="~/images/paypal.svg" alt="PayPal" width="40" />
                            </label>
                        </div>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <a role="button" asp-action="BookFlight" asp-route-id="@Model.FlightId" class="btn btn-secondary">Return</a>
                <button type="submit" class="btn btn-success">Confirm Payment</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}