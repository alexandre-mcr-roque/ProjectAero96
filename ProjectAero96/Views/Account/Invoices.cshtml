@model IEnumerable<InvoiceViewModel>
@{
    ViewBag.Title = "Invoices";
}


<div class="row">
    <div class="col col-md-10 offset-md-1">
        <h3>Invoices</h3>
        <hr />
        <table class="table table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureCity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ArrivalCity)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model) {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DepartureDate)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.DepartureCity)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ArrivalCity)
                    </td>
                    <td class="align-middle">
                        <a asp-action="DownloadInvoice" asp-route-id="@item.Id" class="btn btn-primary my-1"><i class="fa-solid fa-download"></i> Download PDF</a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
}
@section Scripts {
    <script src="~/lib/font-awesome/js/all.min.js"></script>
}