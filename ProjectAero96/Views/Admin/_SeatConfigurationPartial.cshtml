@model ISeatConfigurationModel
<div id="step2" class="step d-none">
    <div class="form-group">
        <div class="form-group mb-3">
            <label asp-for="SeatRows" class="form-label"></label>
            <input asp-for="SeatRows" class="form-control" />
            <span asp-validation-for="SeatRows" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="SeatColumns" class="form-label"></label>
            <input asp-for="SeatColumns" class="form-control" />
            <span asp-validation-for="SeatColumns" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="WindowSeats" class="form-label"></label>
            <input asp-for="WindowSeats" class="form-control" />
            <span asp-validation-for="WindowSeats" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Seat Configuration Preview</label>
            <center>
                <div id="seat-map" class="border rounded p-3 bg-light align-content-center" style="min-height: 100px; min-width: 200px;">
                    <!-- Seat map will be rendered here -->
                </div>
            </center>
            <div id="seat-config-error" class="text-danger mt-2"></div>
        </div>
        <button type="button" class="btn btn-secondary paging-wz" step="1">Back</button>
    </div>
</div>